<h1>Add administrative user</h1>

<%= render 'layouts/errors', object: @admin %>

<%= form_for @admin do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit class: "btn btn-primary" %></div>
<% end %>
